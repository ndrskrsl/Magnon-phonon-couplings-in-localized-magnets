@Article{thomson14,
  Title                    = {Elastic anomalies associated with structural and magnetic phase transitions in single crystal hexagonal YMnO 3},
  Author                   = {R I Thomson and T Chatterji and C J Howard and T T M Palstra and M A Carpenter},
